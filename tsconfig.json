{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ESNext"],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noErrorTruncation": true,
    "jsx": "react-jsxdev"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
